<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blue"
    tools:context="com.morris.myapplication.FullscreenActivity">



    <LinearLayout
        android:id="@+id/fullscreen_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/header"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textClock"
                android:layout_gravity="center_vertical|left"

                android:padding="20dp"
                android:textColor="#d9d9d8"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/rsz_logo_malibu_boats"
                android:layout_gravity="center" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:src="@drawable/rsz_gear_1"
                android:background="#00000000"
                android:layout_gravity="center_vertical|right" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/speed_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_gradient"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:id="@+id/txt_satelites"
                    android:textStyle="bold|italic"
                    android:typeface="sans"
                    android:textSize="30sp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal|right"
                    android:textColor="#000000" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageView2"
                    android:src="@drawable/satellite_512"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11.2"
                    android:id="@+id/txt_speed"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:textSize="130dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MPH"
                    android:id="@+id/textView"
                    android:textStyle="bold|italic"
                    android:typeface="sans"
                    android:textSize="30sp"
                    android:layout_gravity="center"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/middle_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:baselineAligned="false">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                >


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Tab Adjustment"
                            android:padding="10dp"
                            android:id="@+id/textView2" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="fill_vertical"
                            android:padding="20dp"
                            >

                            <ImageButton
                                android:onClick="gateAdjustIncrease"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#00000000"
                                android:layout_gravity="top|center"
                                android:src="@drawable/rsz_arrow_up" />

                            <ImageButton
                                android:onClick="gateAdjustDecrease"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#00000000"
                                android:layout_gravity="bottom|center"
                                android:src="@drawable/rsz_arrow_down" />

                        </FrameLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingLeft="20dp"
                            android:gravity="center">

                            <ProgressBar
                                android:id="@+id/progress_bar"
                                android:layout_width="80dip"
                                android:layout_height="200dip"
                                android:layout_gravity="center"
                                style="@style/Widget.ProgressBar.Vertical" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="0%"
                                android:id="@+id/txt_progress" />


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_weight="1"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView3"
                    android:padding="20dp"
                    android:src="@drawable/rsz_arrow_right_2" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/status_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_start_text"
                android:id="@+id/txt_status"
                android:textColor="#d9d9d8"
                android:padding="10dp"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/controls_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_gradient"
            android:layout_gravity="center_vertical"
            >

            <ImageButton
                android:onClick="leftClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rsz_arrow_left"
                android:layout_gravity="center_vertical"
                android:background="#00000000"
                android:layout_weight="1"
                />

            <ImageButton
                android:onClick="offClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/checkbox_unchecked"
                android:layout_gravity="center_vertical|right"
                android:background="#00000000"
                android:layout_weight="1"
            />

            <ImageButton
                android:onClick="rightClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rsz_arrow_right"
                android:layout_gravity="center_vertical|right"
                android:background="#00000000"
                android:layout_weight="1"
                />

        </LinearLayout>



    </LinearLayout>

</FrameLayout>
